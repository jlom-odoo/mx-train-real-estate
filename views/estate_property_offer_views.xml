<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept_offer" type="object" string="Accept Offer" icon="fa-check"/>
                <button name="action_refuse_offer" type="object" string="Refuse Offer" icon="fa-remove"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>
